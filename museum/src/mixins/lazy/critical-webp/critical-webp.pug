mixin critical-webp(data)

	-
		var name = data.pic.split('.')[0]
		var sizer = `data:image/svg+xml,%3Csvg%20xmlns='http://www.w3.org/2000/svg'%20width='${data.width}'%20viewBox='0%200%20${data.width}%20${data.height}'%3E%3C/svg%3E`

		//- function getSvgXmlSrc($width, $height) {
		//- 	return "data:image/svg+xml,%3Csvg%20xmlns='http://www.w3.org/2000/svg'%20width='" + $width+ "'%20viewBox='0%200%20" + $width+ "%20" + $height + "'%3E%3C/svg%3E"
		//- }

	picture
		source(srcset=sizer data-srcset=`images/${name}.webp` type="image/webp")
		source(srcset=sizer data-srcset=`images/${data.pic}` type="image/jpeg")
		img.lazy-img(src=sizer data-src=`images/${data.pic}` class=data.mod ? data.mod : false alt="pic")
