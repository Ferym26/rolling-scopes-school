		// Мета инфо
		include ../utility/_favicon

		// OG\
		include ../utility/_og

	body.no-js(class=bodyClass)

		script.
			document.querySelector('body').classList.remove('no-js');

		.wrapper
			include ../blocks/header/header
			main.main
				block main
			include ../blocks/footer/footer

		// Модальные окна
		block popups

		// Полключение стилей компонентов
		block componentsStyles

		//- async defer
		// Либы, используемые на всех страницах
		script(src="./js/vendors/jquery-3.6.0.min.js" defer)
		script(src="./js/vendors/svg4everybody.js" defer)

		// Скролл эвенты
		script(src="./js/vendors/noframework.waypoints.min.js" defer)

		// Вялая загрузка картинок
		script(src="./js/vendors/lazyload.min.js" defer)
