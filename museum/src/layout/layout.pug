include ../utility/bemto-setting
include ../utility/_globalVars
include ../utility/_mixins
include ../utility/_functions

block vars
	- var bodyClass;
	- var pageTitle;
	- var pageDescr;
	- var layout;
	- var isSidebar; // маркер наличия сайдбара на странице
	- var componentsList; //список имен всех компонентов
	- var componentsScriptsList; // список имен компонентов, скрипты которых нужно подключить на страницу. они не должны подключаться в main.js

doctype html
html(lang='ru-RU')

	head
		meta(charset='UTF-8')
		meta(name='format-detection', content='telephone=no')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(name='description' content= pageDescr)
		title= pageTitle

		// Подключение общих критический стилей
		link(rel='stylesheet', href='./../assets/css/critical/critical.css' inline)

		// Предзагрузка ключевых ресурсов
		link(rel="preload" as='image' href="./images/logo.svg")
		link(rel="preload" as="font" href="./fonts/Roboto/Roboto-Light.woff2" type="font/woff2" crossorigin)
		link(rel="preload" as="font" href="./fonts/Roboto/Roboto-Light.woff" type="font/woff" crossorigin)
		link(rel="preload" as="font" href="./fonts/Forum/Forum.woff2" type="font/woff2" crossorigin)
		link(rel="preload" as="font" href="./fonts/Forum/Forum.woff" type="font/woff" crossorigin)

		// Подключение стилей с помощью loadCSS техники
		link(rel='preload' as='style' href='./css/styles.min.css' onload="this.onload=null;this.rel='stylesheet'")
		noscript
			link(rel='stylesheet' href='./css/styles.min.css')

